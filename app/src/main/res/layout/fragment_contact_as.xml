<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".ui.fragment.navigationViewCycle.ContactAsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_24"
                android:layout_marginTop="@dimen/dimen_24"
                android:layout_marginEnd="@dimen/dimen_24"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/Contact_Us_Et_Name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_42"
                    android:layout_marginTop="@dimen/dimen_34"
                    android:background="@drawable/edittext_rounded_corners"
                    android:fontFamily="@font/cairo"
                    android:hint="@string/client_register_name_et"
                    android:inputType="text"
                    android:textAlignment="viewStart"/>

                <EditText
                    android:id="@+id/Contact_Us_Et_Email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_42"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:background="@drawable/edittext_rounded_corners"
                    android:fontFamily="@font/cairo"
                    android:hint="@string/client_register_mail_et"
                    android:inputType="textEmailAddress"
                    android:textAlignment="viewStart"/>

                <EditText
                    android:id="@+id/Contact_Us_Et_Phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_42"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:background="@drawable/edittext_rounded_corners"
                    android:fontFamily="@font/cairo"
                    android:hint="@string/client_register_phone_et"
                    android:textDirection="rtl" />

                <EditText
                    android:id="@+id/Contact_Us_Et_Message"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_130"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:background="@drawable/edittext_rounded_corners"
                    android:inputType="text"
                    android:textAlignment="viewStart"/>

                <RadioGroup
                    android:id="@+id/Contact_Us_Rg_Type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_24"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/Contact_Us_Rb_Inquiry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/cairo"
                        android:text="شكوى" />

                    <RadioButton
                        android:id="@+id/Contact_Us_Rb_Suggestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/cairo"
                        android:text="اقتراح" />

                    <RadioButton
                        android:id="@+id/Contact_Us_Rb_Complaint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/cairo"
                        android:text="استعلام" />

                </RadioGroup>

                <Button
                    android:id="@+id/Contact_Us_Btn_Register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dimen_24"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:layout_marginEnd="@dimen/dimen_24"
                    android:layout_marginBottom="@dimen/dimen_24"
                    android:background="@drawable/button_custom_green"
                    android:fontFamily="@font/cairo"
                    android:text="ارسال"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dimen_66"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:fontFamily="@font/cairo"
                        android:text="تابعنا على :"
                        android:textSize="@dimen/album_sp_20" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/Contact_Us_Civ_Facebook_Image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dimen_8"
                        android:src="@drawable/ic_ico_facebook"
                        app:civ_border_color="#3A599A"
                        app:civ_border_width="2dp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/Contact_Us_Civ_Twitter_Image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dimen_8"
                        android:src="@drawable/ic_ico_twitter"
                        app:civ_border_color="#00B7EB"
                        app:civ_border_width="2dp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/Contact_Us_Civ_Instagram_Image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dimen_8"
                        android:src="@drawable/ic_ico_instgram"
                        app:civ_border_color="#C33DA4"
                        app:civ_border_width="2dp" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>