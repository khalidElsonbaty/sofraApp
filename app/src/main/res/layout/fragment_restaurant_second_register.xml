<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".ui.fragment.restaurantCycle.RestaurantSecondRegisterFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8"
                android:layout_marginTop="@dimen/dimen_24"
                android:layout_marginEnd="@dimen/dimen_24"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_42"
                    android:layout_marginTop="@dimen/dimen_34"
                    android:background="@drawable/edittext_rounded_corners">

                    <Spinner
                        android:id="@+id/Restaurant_Register_Spn_Category"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_42"
                        android:focusableInTouchMode="false"
                        android:layoutDirection="rtl"
                        android:visibility="visible" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/Restaurant_Register_Et_Min_Order"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_42"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:background="@drawable/edittext_rounded_corners"
                    android:fontFamily="@font/cairo"
                    android:hint="@string/restaurant_register_et_min_order"
                    android:inputType="text"
                    android:padding="@dimen/dimen_4"
                    />

                <EditText
                    android:id="@+id/Restaurant_Register_Et_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_42"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:background="@drawable/edittext_rounded_corners"
                    android:fontFamily="@font/cairo"
                    android:hint="@string/restaurant_register_et_delivery"
                    android:inputType="text"
                    android:padding="@dimen/dimen_4"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_42"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:fontFamily="@font/cairo"
                    android:text="@string/restaurant_register_checkbox_data" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/Restaurant_Register_Et_Phone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_42"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_rounded_corners"
                        android:fontFamily="@font/cairo"
                        android:hint="@string/restaurant_register_et_phone"
                        android:inputType="text"
                        android:padding="@dimen/dimen_4"
                        android:layout_marginEnd="@dimen/dimen_8"/>

                    <EditText
                        android:id="@+id/Restaurant_Register_Et_whatsUp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_42"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_rounded_corners"
                        android:fontFamily="@font/cairo"
                        android:hint="@string/restaurant_register_et_whatsup"
                        android:inputType="text"
                        android:padding="@dimen/dimen_4"
                        android:layout_marginStart="@dimen/dimen_8"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_24">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/restaurant_register_et_image"
                        android:fontFamily="@font/cairo"
                        android:textSize="@dimen/dimen_24"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/Restaurant_Register_Et_Image"
                        android:layout_width="60dp"
                        android:layout_height="90dp"
                        android:layout_weight="2"
                        android:layout_marginEnd="@dimen/dimen_34"
                        android:background="@mipmap/ic_launcher_round"
                        android:scaleType="fitXY"/>
                    
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_8">

                <Button
                    android:id="@+id/Restaurant_Register_Btn_Register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dimen_24"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:layout_marginEnd="@dimen/dimen_24"
                    android:layout_marginBottom="@dimen/dimen_24"
                    android:background="@drawable/button_custom_green"
                    android:fontFamily="@font/cairo"
                    android:text="@string/restaurant_register_register_btn"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>