<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.navigationViewCycle.MyOrderFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/MY_Order_TabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Restaurant_Details_Ll_Restaurant"
        android:layout_marginTop="@dimen/dimen_8"
        android:background="#DFDFDF"
        android:layoutDirection="rtl"
        app:tabGravity="fill"
        app:tabMode="fixed" />

    <android.support.v4.view.ViewPager
        android:id="@+id/My_Order_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Restaurant_Details_TabLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:layoutDirection="ltr" />


</LinearLayout>