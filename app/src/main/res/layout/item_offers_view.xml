<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_8"
    android:layout_marginTop="@dimen/dimen_8"
    android:layout_marginEnd="@dimen/dimen_8"
    android:padding="@dimen/dimen_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Restaurant_Items_ImageView_Restaurant"
                android:layout_width="@dimen/album_dp_100"
                android:layout_height="@dimen/album_dp_100"
                android:layout_marginStart="@dimen/dimen_8"
                android:layout_marginTop="@dimen/dimen_8"
                android:layout_marginEnd="@dimen/dimen_8"
                android:layout_marginBottom="@dimen/dimen_8"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/dimen_8">

            <TextView
                android:id="@+id/Offers_Tv_Restaurant_Offer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/details_font"
                android:textDirection="rtl" />

            <TextView
                android:id="@+id/Offers_Tv_Restaurant_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/details_font"
                android:textDirection="rtl" />
            <TextView
                android:id="@+id/Offers_Tv_Restaurant_available"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/details_font"
                android:textDirection="rtl" />

            <TextView
                android:id="@+id/Offers_Tv_Restaurant_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/green_availability"
                android:fontFamily="@font/details_font"
                android:textDirection="rtl" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>