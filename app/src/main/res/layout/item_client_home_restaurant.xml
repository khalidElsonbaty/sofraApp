<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Home_Client_CardView_Restaurant"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginStart="@dimen/dimen_8"
    android:layout_marginTop="@dimen/dimen_8"
    android:layout_marginEnd="@dimen/dimen_8"
    android:paddingStart="@dimen/dimen_4"
    android:paddingTop="@dimen/dimen_4"
    android:paddingEnd="@dimen/dimen_4"
    android:paddingBottom="@dimen/dimen_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Home_Client_ImageView_Restaurant"
                android:layout_width="@dimen/dimen_74"
                android:layout_height="@dimen/dimen_74"
                android:layout_marginStart="@dimen/dimen_16"
                android:layout_marginTop="@dimen/dimen_16"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Home_Client_Tv_Restaurant_Name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/details_font"
                android:textDirection="rtl" />

            <TextView
                android:id="@+id/Home_Client_Tv_Restaurant_Category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dimen_4"
                android:layout_weight="1"
                android:fontFamily="@font/details_font" />

            <RatingBar
                android:id="@+id/Home_Client_RatingBar_Restaurant"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:paddingTop="@dimen/dimen_4"
                android:paddingBottom="@dimen/dimen_8"
                android:stepSize="0.1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Home_Client_Tv_Restaurant_Available"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_check_circle_green"
                android:fontFamily="@font/details_font"
                android:paddingTop="@dimen/dimen_2"
                android:textColor="@color/green_availability"
                android:textSize="@dimen/dimen_text_20"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Home_Client_Tv_Restaurant_Delivery_Period"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/details_font"
                    android:text="الحد الادنى للتوصيل"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/Home_Client_Tv_Restaurant_delivery_period_Result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/details_font" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_4"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Home_Client_Tv_Restaurant_delivery_cost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/details_font"
                    android:text="رسوم التوصيل" />

                <TextView
                    android:id="@+id/Home_Client_Tv_Restaurant_delivery_cost_Result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:fontFamily="@font/details_font" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>