<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_90"
    android:layout_marginStart="@dimen/dimen_8"
    android:layout_marginTop="@dimen/dimen_8"
    android:layout_marginEnd="@dimen/dimen_8"
    android:layoutDirection="rtl"
    android:paddingStart="@dimen/dimen_4"
    android:paddingTop="@dimen/dimen_4"
    android:paddingEnd="@dimen/dimen_4"
    android:paddingBottom="@dimen/dimen_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.7"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Restaurant_FeedBacks_Tv_product_Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/details_font"
                android:padding="@dimen/dimen_8"
                android:textDirection="rtl"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layoutDirection="ltr"
                android:layout_weight="1.5">

                <RatingBar
                    android:id="@+id/Restaurant_FeedBacks_RatingBar_Product"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:layout_weight="1"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:paddingBottom="@dimen/dimen_8"
                    android:stepSize="0.1" />

                <TextView
                    android:id="@+id/Restaurant_FeedBacks_Tv_Restaurant_Date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:inputType="datetime"
                    android:fontFamily="@font/details_font" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/Restaurant_FeedBacks_Tv_product_Description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/details_font"
                android:padding="@dimen/dimen_8"
                android:textDirection="rtl"/>
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>